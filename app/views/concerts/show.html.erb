<% title @concert.artist.name + ", "+ (l @concert.date, :format=>:date) %>

<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
<dt>Date:</dt>
<dd><%= l @concert.date, :format=>:day%></dd>

<dt>Artist:</dt>
<dd><%= @concert.artist.name %></dd>

<dt>Venue:</dt>
<dd><%= link_to @concert.venue.name, @concert.venue %></dd>

<dt>Age Restriction:</dt>
<dd><%= @concert.over21 ? "21+" : (@concert.over18 ? "18+" : "All Ages") %>

<dt>Price:</dt>
<dd><%= number_to_currency(@concert.price) %>
  
<dt>Doors open:</dt>
<dd><%= l @concert.date, :format=>:time %>

</dl>

<%= link_to 'Back', concerts_path %>

