<% title 'Venues' %>

<table class="table-bordered table-striped table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Capacity</th>
    <th>Box Office Hours</th>
    <th>Seating</th>
  </tr>
  </thead>

  <tbody>
  <% @venues.each do |venue| %>
    <tr>
      <td><%= venue.name %></td>
      <td><address><%= venue.address %></address></td>
      <td><%= venue.phone %></td>
      <td><%= venue.capacity %></td>
      <td><%= venue.hours %></td>
      <td><%= venue.seating %></td>
      <td>
        <%= link_to venue, :class => "btn btn-inverse btn-mini", :style => 'color: #FFFFFF' do %>
            <i class="icon-chevron-right icon-white"></i>
        <% end %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

